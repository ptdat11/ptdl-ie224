{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"strict": true,
		"allowJs": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"moduleResolution": "node"
	},
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Recommended"
}